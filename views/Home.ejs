<html>
    <head>
        <meta charset="utf-8">
        <title>Laptop Store</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <!--Font Awesome-->
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
        <!--Theme style-->
        <link rel="stylesheet" href="dist/css/adminlte.min.css">
        <!--Google Font: Source sans pro-->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link rel="stylesheet" href="Input.css">
    </head>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!--Navabar-->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                                   <i class="fas fa-bars"></i></a>
                        </li>
                        <li class="nav-item d-none d-sm-inline-block">
                        <a href="/" class="nav-link">Home</a>
                        </li>
                    </ul>
                </nav>
            <!--/.navbar-->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!--Brand Logo-->
                <a  hreg="/" class="brand-link">
                    <img src="LaptopStoreLogo.jpg" alt="Laptop Store Logo" class="brand-image img-circle elevation-3">
                    <span class="brand-text font-weight-light">Laptop Store</span>
                </a>
                <!--Sidebar-->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/create" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p>Add Laptop</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/sales" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p>Sales Details</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/updatesale" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p>Update Sales</p>
                            </a>
                        </li>
                    </ul>
                </nav>

            </aside>
            <div class="content-wrapper">
                <section class="content-header">
                    <h1>Laptop Inventory Management</h1>
                </section>
                <section class="content">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Laptop Details</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>

                        </div>
                        <div class="card-body table-responsive p-0" style="height: 400px;">
                            <table class="table table-striped table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th style="width: 10%" >LaptopId</th>
                                        <th style="width: 10%" >Brand</th>
                                        <th style="width: 10%" >Model</th>
                                        <th style="width: 15%" >Quantity</th>
                                        <th style="width: 10%" >Cost Price</th>
                                        <th style="width: 10%" >Selling Price</th>
                                        <th style="width: 15%" > </th>
                                        <th style="width: 15%" > </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0;i<data.length;i++) { %>
                                        <tr>
                                            <td><%= data[i].id %></td>
                                            <td><%= data[i].brand %></td>
                                            <td><%= data[i].model %></td>
                                            <td><%= data[i].quantity %>
                                                <div class="progress progress-xs">
                                                    <div class="progress-bar bg-danger" style="width:20%"></div>
                                                </div>
                                                <small><%= data[i].Quantity %></small>
                                            </td>
                                            <td><%= data[i].costprice %></td>
                                            <td><%= data[i].sellingprice %></td>
                                            <td>
                                            </td>
                                            <!--<td><%= data[i].sellingprice %></td>-->
                                            <td class="project-actions text-right">
                                                <a class="btn btn-info btn-sm" href=<%="/edit?id="+data[i].id%>><i class="fas fa-pencil-alt"></i>Edit</a>	
                                            </td>
                                            <td class="project-actions text-right">
                                                <form action='/delete' method="post">
                                                    <a class="btn btn-danger btn-sm"><i class="fas fa-trash">
                                                        <input type="hidden" name="id" value=<%= data[i].id %>>
                                                        <input class="delete" type="submit" value="Delete">
                                                    </i></a>
                                                    <!--<input type="hidden" name="BookId" value=<%= data[i].BookId %>>
                                                    <input class="delete" type="submit" value="Delete">-->
                                                </form>	
                                            </td>	
                                        </tr>
                                    <% } %>
                                </tbody>	
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </body>
</html>
